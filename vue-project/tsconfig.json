{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    
  ],
  "compilerOptions": {
    "resolveJsonModule": true,     // 启用JSON模块解析
    "esModuleInterop": true,       // 支持CommonJS/ES模块互操作性
    "moduleResolution": "Node",    // 使用Node.js模块解析策略
    "baseUrl": ".",                // 基础路径
    "paths": {
      // 如果使用路径映射
      "@artifacts/*": ["artifacts/*"]
    }
  },
  "include": ["src/**/*.ts", "artifacts/**/*.json"] // 包含JSON文件
}
